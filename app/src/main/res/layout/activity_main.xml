<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/nutridietician"
        android:scaleType="fitStart"/>

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/telephone"
        android:layout_centerVertical="true"
        android:layout_marginBottom="3dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:text="About: Nutridietitian is dedicated to providing you
with evidence-based nutrition care at the comfort of your home or at a
dedicated clinical center across Ghana"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="viewStart"/>

    <TextView
        android:id="@+id/telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/email"
        android:layout_marginBottom="3dp"
        android:paddingLeft="50dp"
        android:text="Telephone number: +233554814338" />


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/website"
        android:layout_marginBottom="50dp"
        android:paddingLeft="50dp"
        android:text="Email: nutridietician@gmail.com" />

    <TextView
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/appointment"
        android:layout_marginTop="-44dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="50dp"
        android:text="Website: www.nutridietician.org" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book an appointment"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/appointment"
        android:layout_alignParentBottom="true"

        />


</RelativeLayout>